import tkinter as tk
from tkinter import messagebox

def agregar_tarea():
    # Lógica para agregar una nueva tarea
    pass

def marcar_completada():
    # Lógica para marcar una tarea como completada
    pass

def eliminar_tarea():
    # Lógica para eliminar una tarea
    pass

# Crear la ventana principal
root = tk.Tk()
root.title("Gestión de Tareas")

# Widgets
label_descripcion = tk.Label(root, text="Descripción:")
entry_descripcion = tk.Entry(root)

label_fecha = tk.Label(root, text="Fecha de vencimiento:")
entry_fecha = tk.Entry(root)

label_prioridad = tk.Label(root, text="Prioridad:")
entry_prioridad = tk.Entry(root)

boton_agregar = tk.Button(root, text="Agregar Tarea", command=agregar_tarea)
boton_completada = tk.Button(root, text="Marcar como Completada", command=marcar_completada)
boton_eliminar = tk.Button(root, text="Eliminar Tarea", command=eliminar_tarea)

# Posicionamiento de widgets
label_descripcion.grid(row=0, column=0)
entry_descripcion.grid(row=0, column=1)

label_fecha.grid(row=1, column=0)
entry_fecha.grid(row=1, column=1)

label_prioridad.grid(row=2, column=0)
entry_prioridad.grid(row=2, column=1)

boton_agregar.grid(row=3, column=0, columnspan=2)
boton_completada.grid(row=4, column=0, columnspan=2)
boton_eliminar.grid(row=5, column=0, columnspan=2)

# Ejecutar la aplicación
root.mainloop()
